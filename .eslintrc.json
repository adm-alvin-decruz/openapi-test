{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "eqeqeq": "error",
    "prefer-const": "error"
  }
}
